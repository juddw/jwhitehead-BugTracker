    <script src="~/assets/plugins/raphael/raphael-min.js"></script>

    <script>
        Morris.Donut({
            element: 'ticketStatusChart',
            data: [
                { label: "Assigned", value: @ViewBag.AssignedTk, "color": "#c2a57e" },
                { label: "Unassigned", value: @ViewBag.UnassignedTk, "color": "#b2c7c8"  },
