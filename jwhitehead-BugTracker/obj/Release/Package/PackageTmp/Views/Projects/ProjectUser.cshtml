@model jwhitehead_BugTracker.Models.Helpers.ProjectUserViewModel
@{
    ViewBag.Title = "ProjectUser";
}

<h2>Assign Users to Project</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.AssignProjectId)

    <h4>Project Name : @Model.AssignProject.Title</h4>

    @Html.ListBox("SelectedUsers", Model.Users, new { @class = "multi-select" })
    <button type="submit" style="display: block; margin-top: 10px;">Submit</button>
}

@*added with Ryan - multi-select roles switch box*@
@section Scripts {
    <script src="~/assets/multi-select/multiselect.js"></script>
    <script type="text/javascript">
        /* Multiselect inputs */
        $(function () {
            "use strict";
            $('.multi-select').multiSelect({
                selectableHeader: "<div style='text-align: center; font-size:16px; height: 25px; background-color: black; color: white'><strong>Available Users</strong></div>",
                selectionHeader: "<div style='text-align: center; font-size:16px; height: 25px; background-color: black; color: white'><strong>Users</strong></div>"
            });
        });
    </script>
}