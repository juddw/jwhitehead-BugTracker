@model jwhitehead_BugTracker.Models.AdminUserViewModels

@{
    ViewBag.Title = "Edit User Roles";
}

<h2>Edit User Roles</h2>

@using (Html.BeginForm("EditUserRoles", "Admin", FormMethod.Post))
{
    <h4>
        @Html.DisplayFor(model => model.User.FullName)
    </h4>
    <hr />
    @Html.HiddenFor(model => model.User.Id)
    // added with Ryan - multi-select roles switch box
    @Html.ListBox("SelectedRoles", Model.Roles, new { @class = "multi-select" }) // comes from AdminUserViewModels.cs
    <input type="submit" value="Assign Roles" class="btn btn-primary" style="margin-top: 10px;" />
}

<div style="margin-top: 40px; margin-bottom: 30px;">
    @Html.ActionLink("Back to Admin Index", "Index")
</div>

@*added with Ryan - multi-select roles switch box*@
@section Scripts {
    <script src="~/assets/multi-select/multiselect.js"></script>
    <script type="text/javascript">
        /* Multiselect inputs */
        $(function () {
            "use strict";
            $('.multi-select').multiSelect({
                selectableHeader: "<div style='text-align: center; font-size:16px; height: 30px; background-color: black; color: white'><strong>Available Roles</strong></div>",
                selectionHeader: "<div style='text-align: center; font-size:16px; height: 30px; background-color: black; color: white'><strong>User Roles</strong></div>"
            });
        });
    </script>
}
